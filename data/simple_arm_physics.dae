<?xml version="1.0"?>
<COLLADA xmlns="http://www.collada.org/2005/11/COLLADASchema" version="1.4.1">
    <asset>
    	<up_axis>Y_UP</up_axis>
    </asset>
    <library_physics_model id="MyLibPhys">
	<physics_model>
	    <rigid_body sid="Ground">
		<technique_common>
		    <dynamic>false</dynamic>
                </technique_common>
            </rigid_body>
	    <rigid_body sid="Arm">
		<technique_common>
		    <dynamic>true</dynamic>
		    <mass> 1.0 </mass>
		    <inertia> 2.104e-2 4.167e-4 2.104e-2 </inertia>
                    <shape>
    			<box>
			    <half_extents>0.0125 0.125 0.0125</half_extents>
	    		</box>
                    </shape>
                </technique_common>
            </rigid_body>
	    <rigid_body sid="Forearm">
    		<technique_common>
                    <dynamic>true</dynamic>
                    <mass> 0.8 </mass>
                    <inertia> 1.077e-2 2.133e-4 1.077e-2 </inertia>
                    <shape>
    			<box>
			    <half_extents>0.01 0.1 0.01</half_extents>
	    		</box>
                    </shape>
		</technique_common>
	    </rigid_body>		
	    <rigid_body sid="Hand">
                <technique_common>
                    <dynamic>true</dynamic>
    		    <mass> 0.2 </mass>
                    <inertia> 6.733e-4 1.333e-5 6.733e-4 </inertia>
                    <shape>
    			<box>
			    <half_extents>0.005 0.05 0.005</half_extents>
	    		</box>
                    </shape>
                </technique_common>
            </rigid_body>
            <rigid_constraint sid="./Shoulder">
                <ref_attachment rigid_body="./Ground"/>
                <attachment rigid_body="./Arm">
                    <translate>
                        0 -0.125 0
                    </translate>
                </attachment>
                <technique_common>
                    <swing_cone_and_twist>
                        <min>0 0 –INF </min>
                        <max>0 0 INF</max>
                    </swing_cone_and_twist>
                </technique_common>
            </rigid_constraint>
            <rigid_constraint sid="Elbow">
                <ref_attachment rigid_body="#Arm">
                    <translate>
                        0 0.125 0
                    </translate>
                </attachment>
                <attachment rigid_body="#Forearm">
                    <translate>
                        0 -0.1 0
                    </translate>
                </attachment>
                <technique_common>
                    <swing_cone_and_twist>
                        <min>0 0 –INF </min>
                        <max>0 0 INF</max>
                    </swing_cone_and_twist>
                </technique_common>
            </rigid_constraint>
            <rigid_constraint sid="Wrist">
                <ref_attachment rigid_body="#Forearm">
                    <translate>
                        0 0.1 0
                    </translate>
                </attachment>
                <attachment rigid_body="#Hand">
                    <translate>
                        0 -0.05 0
                    </translate>
                </attachment>
                <technique_common>
                    <swing_cone_and_twist>
                        <min>0 0 –INF </min>
                        <max>0 0 INF</max>
                    </swing_cone_and_twist>
                </technique_common>
        </physics_model>
    </library_physics_model>

    <physics_scene id="MyPhysScene">
        <instance_physics_model url="#SimpleArm">
            <instance_rigid_body body="Arm">
            <instance_rigid_body body="Forearm"/>
            <instance_rigid_body body="Hand"/>
            <instance_rigid_constraint constraint="Shoulder"/>
        </instance_physics_model>
    </physics_scene>
</COLLADA>
